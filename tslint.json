{
  "defaultSeverity": "error",
  "rulesDirectory": ["tslint-plugin-prettier"],
  "extends": ["tslint-config-airbnb", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": ["config/**/*.js", "node_modules/**/*.ts", "coverage/lcov-report/*.js"]
  },
  "rules": {
    "prettier": [
      true,
      {
        "singleQuote": true,
        "printWidth": 120,
        "trailingComma": "none"
      }
    ],
    "class-name": true,
    "curly": true,
    "eofline": false,
    "forin": true,
    "indent": [true, "spaces", 2],
    "label-position": true,
    "max-line-length": [true, 800],
    "no-arg": true,
    "no-bitwise": true,
    "no-console": [true, "debug", "info", "time", "timeEnd", "trace"],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-empty": false,
    "no-eval": true,
    "no-string-literal": false,
    "no-trailing-whitespace": [true, "ignore-comments"],
    "no-unused-variable": true,
    "one-line": [true, "check-open-brace", "check-catch", "check-else", "check-whitespace"],
    "radix": true,
    "triple-equals": [true, "allow-null-check"],
    "variable-name": false,
    "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-separator"],
    "import-name": false,
    "ordered-imports": false,
    "interface-name": false,
    "no-empty-interface": false,
    "object-literal-sort-keys": false,
    "object-literal-shorthand": false,
    "object-shorthand-properties-first": false,
    "no-increment-decrement": false,
    "jsx-no-lambda": false,
    "no-submodule-imports": false
  }
}
